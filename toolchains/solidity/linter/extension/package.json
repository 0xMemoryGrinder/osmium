{
  "name": "@osmium-toolchains/solidity-linter-extension",
  "displayName": "solidhunter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sol",
    "onLanguage:solidity",
    "workspaceContains:**/.solidhunter.json",
    "workspaceContains:**/*.sol"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "solidhunter.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "sol",
        "aliases": [
          "Solidity"
        ],
        "extensions": [
          ".sol"
        ]
      }
    ]
  },
  "configuration": {
    "type": "object",
    "title": "solidity-language-server",
    "properties": {
      "solidhunter.trace.server": {
        "type": "string",
        "scope": "window",
        "enum": [
          "off",
          "messages",
          "verbose"
        ],
        "enumDescriptions": [
          "No traces",
          "Error only",
          "Full log"
        ],
        "default": "verbose",
        "description": "Traces the communication between VS Code and the language server."
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
